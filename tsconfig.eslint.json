{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./packages/shared/src/*"
      ],
      "@clstr/core": [
        "./packages/core/src"
      ],
      "@clstr/core/*": [
        "./packages/core/src/*"
      ]
    }
  },
  "include": [
    "src",
    "packages/shared/src",
    "packages/core/src",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "external",
    "external/**/*"
  ]
}
