{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@clstr/core": [
        "./packages/core/src/index.ts"
      ],
      "@clstr/core/*": [
        "./packages/core/src/*"
      ],
      "@clstr/shared": [
        "./packages/shared/src/index.ts"
      ],
      "@clstr/shared/*": [
        "./packages/shared/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
